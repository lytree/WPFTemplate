<UserControl x:Class="WPFTemplate.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewsModel="clr-namespace:WPFTemplate.ViewsModel"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" d:DataContext="{d:DesignInstance Type=viewsModel:HomeViewsModel}"
             mc:Ignorable="d" 
             Background="{DynamicResource SecondaryRegionBrush}">
    <Border Background="{DynamicResource RegionBrush}"
        CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Center">
        <hc:TransitioningContentControl>
            <StackPanel Margin="32">
                <wpf:WebView2 Width="{Binding ContentWidth}" Height="{Binding Path=ContentHeight}" Source="https://www.microsoft.com"></wpf:WebView2>

                
            </StackPanel>
        </hc:TransitioningContentControl>
    </Border>

</UserControl>
