<UserControl x:Class="WPFTemplate.Views.Web"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTemplate.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Border Background="{DynamicResource RegionBrush}" CornerRadius="4"  VerticalAlignment="Center" HorizontalAlignment="Center">
        <hc:TransitioningContentControl>
            <StackPanel Margin="32">
                <hc:GifImage Width="400" Height="300">
                    <hc:GifImage.Source>
                        <BitmapImage UriSource="/WPFTemplate;component/Resources/Img/under_construction.gif"/>
                    </hc:GifImage.Source>
                </hc:GifImage>
                <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="全局设置" Style="{StaticResource TextBlockLargeBold}"/>
            </StackPanel>
        </hc:TransitioningContentControl>
    </Border>
</UserControl>
